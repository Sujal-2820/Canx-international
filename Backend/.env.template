# Backend Environment Variables Template
# Copy this file to .env and fill in the values
# DO NOT commit .env to Git!

# ============================================================================
# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ============================================================================
# MongoDB Connection
# Get this from MongoDB Atlas → Clusters → Connect
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=ClusterName

# ============================================================================
# JWT Authentication
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=30d

# ============================================================================
# SMS Service (SMS India Hub)
# Get from SMS India Hub dashboard
SMSINDIAHUB_API_KEY=your_api_key_here
SMSINDIAHUB_SENDER_ID=SMSHUB

# ============================================================================
# Payment Gateway (Razorpay)
# Get from Razorpay Dashboard → Settings → API Keys
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=your_secret_here
RAZORPAY_TEST_MODE=true
RAZORPAY_SIMULATE_FAILURE=false

# ============================================================================
# Google Maps API (Optional)
# Get from Google Cloud Console
GOOGLE_MAPS_API_KEY=

# ============================================================================
# Business Rules & Constants
MIN_ORDER_VALUE=2000
MIN_VENDOR_PURCHASE=50000
DELIVERY_CHARGE=50
VENDOR_COVERAGE_RADIUS_KM=0.5
DELIVERY_TIMELINE_HOURS=24

# ============================================================================
# IRA Partner Commission Structure
IRA_PARTNER_COMMISSION_RATE_LOW=2
IRA_PARTNER_COMMISSION_RATE_HIGH=3
IRA_PARTNER_COMMISSION_THRESHOLD=50000

# ============================================================================
# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5

# ============================================================================
# Admin Password
# Change this in production!
ADMIN_PASSWORD=admin123

# ============================================================================
# Cloudinary Configuration
# Get from Cloudinary Dashboard
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# ============================================================================
# CORS Configuration (for production)
# Comma-separated list of allowed origins
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:5173
